FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install --omit=dev

# Copy server files
COPY server ./server

# Create required directories
RUN mkdir -p server/templates server/config server/backups

# Set permissions for the node user (built into the image)
RUN chown -R node:node /app

# Use the node user
USER node

# Expose port
EXPOSE 3001

# Start the server
CMD ["node", "server/index.js"]